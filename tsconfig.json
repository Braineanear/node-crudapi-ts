{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "src",
    "noEmitHelpers": false,
    "strict": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "lib": [
      "es2015",
      "dom",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "package*.json"
  ]
}