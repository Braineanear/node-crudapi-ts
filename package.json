{
  "name": "nodeapi-ts-boilerplate",
  "version": "1.0.0",
  "description": "A node API boilerplate with typescript and sequelize ORM.",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^8.10.39",
    "pm2": "^3.2.9",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/nodemailer": "^4.6.6",
    "@types/passport-jwt": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "crypto-js": "^3.1.9-1",
    "db-migrate-mysql": "^1.1.10",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "http": "0.0.0",
    "jsonwebtoken": "^8.4.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "mysql2": "^1.6.5",
    "nodemailer": "^5.1.1",
    "nodemailer-express-handlebars": "^3.0.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^4.42.0",
    "sequelize-typescript": "^0.6.7"
  },
  "author": "Jos√© Albino Jr. <albinojunior.github.io>",
  "license": "ISC",
  "scripts": {
    "prestart": "npm run build",
    "start": "pm2 start ecosystem.config.js",
    "poststart": "tsc -w",
    "stop": "pm2 delete all",
    "build": "tsc",
    "start:prod": "sudo rm -rf dist && sudo npm run build && npm run migrate:prod && sudo pm2 start ecosystem.config.js && sudo pm2 log",
    "create-migration": "db-migrate create -m ./src/database/migrations",
    "migrate": "db-migrate up -m ./src/database/migrations",
    "migrate:prod": "db-migrate -e prod -m ./src/database/migrations"
  }
}
